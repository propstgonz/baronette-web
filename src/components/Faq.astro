---
import { faq } from "../data/faq.ts";
---

<div class="min-h-screen flex flex-col">
  <header class="max-w-4xl mx-auto mb-12 px-8 py-10 text-center">
    <h1 class="text-3xl font-bold text-[#D99058] mb-4">FAQ</h1>
    <p class="text-base text-gray-400">Preguntas recurrentes sobre este sitio</p>
  </header>

  <main class="flex-1 max-w-6xl mx-auto space-y-6 px-4 mb-16">
    {
      faq.map((faq) => (
        <section class="bg-[#1f2937] p-6 rounded-lg border border-gray-600 shadow">
          <h2 class="text-2xl font-bold text-[#D99058] mb-3">{faq.question}</h2>
          <p
            class="text-base text-gray-100 leading-relaxed"
            set:html={faq.answer}
          />
        </section>
      ))
    }
  </main>
</div>

<script src="../scripts/whatismyip.ts"></script>
