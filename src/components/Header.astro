---
import { headerLinks } from '../data/header';
---

<header class="bg-orange-500 text-white py-6">
  <div
    class="max-w-6xl mx-auto px-4 flex flex-col sm:flex-row justify-between items-center gap-4"
  >
    <div class="flex items-center gap-2">
      <span class="text-2xl font-bold tracking-wide">Baronette.es</span>
    </div>

    <nav class="flex gap-6 text-sm">
      {headerLinks.map(link => (
        <a href={link.href} class="hover:text-orange-200 transition-colors">
          {link.text}
        </a>
      ))}
    </nav>

    <p id="user-name" class="text-sm font-medium sm:text-right hidden"></p>
  </div>

  <script>
    const el = document.getElementById("user-name");
    const user = localStorage.getItem("userName");
    if (user && el) {
      el.textContent = `Hola, ${user}`;
      el.classList.remove("hidden");
    }
  </script>
</header>
