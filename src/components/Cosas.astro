---
import { cosas } from "../data/cosas";
import type { Cosa } from "../types/cosas";
---

<div class="bg-gray-900 min-h-screen p-8">
  <h2 class="text-3xl font-bold text-white mb-6 text-center">Cosas (Links a sitios que me gustan)</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
    {
      cosas.map((cosa: Cosa) => (
        <div class="bg-gray-800 rounded-xl shadow-md overflow-hidden flex flex-col transition transform hover:-translate-y-1 hover:shadow-xl">
          <div class="w-full aspect-video">
            <img
              src={cosa.img}
              alt={cosa.title}
              class="w-full h-full object-cover"
              loading="eager"
            />
          </div>
          <div class="p-4 flex-1 flex flex-col justify-between">
            <h3 class="text-lg font-semibold text-white mb-2">{cosa.title}</h3>
            <p class="text-gray-300 text-sm mb-4">{cosa.description}</p>
            <a
              href={cosa.link}
              class="mt-auto inline-block bg-blue-600 text-white text-center px-3 py-1.5 rounded hover:bg-blue-500 transition"
            >
              Ver m√°s
            </a>
          </div>
        </div>
      ))
    }
  </div>
</div>
