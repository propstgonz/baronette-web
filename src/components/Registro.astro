<form
  id="signup-form"
  class="max-w-md mx-auto mt-16 mb-16 p-8 bg-gray-800 rounded-xl shadow-lg space-y-6 text-gray-100"
>
  <h2 class="text-2xl font-bold text-gray-50 text-center">Registro</h2>

  <div class="flex flex-col">
    <label for="first_name" class="mb-2 text-gray-300 font-medium">Nombre</label
    >
    <input
      type="text"
      id="first_name"
      name="first_name"
      required
      class="bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-100"
      placeholder="Tu nombre"
    />
  </div>

  <div class="flex flex-col">
    <label for="last_name_1" class="mb-2 text-gray-300 font-medium"
      >Apellido 1</label
    >
    <input
      type="text"
      id="last_name_1"
      name="last_name_1"
      required
      class="bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-100"
      placeholder="Primer apellido"
    />
  </div>

  <div class="flex flex-col">
    <label for="last_name_2" class="mb-2 text-gray-300 font-medium"
      >Apellido 2</label
    >
    <input
      type="text"
      id="last_name_2"
      name="last_name_2"
      class="bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-100"
      placeholder="Segundo apellido (opcional)"
    />
  </div>

  <div class="flex flex-col">
    <label for="username" class="mb-2 text-gray-300 font-medium">Usuario</label>
    <input
      type="text"
      id="username"
      name="username"
      required
      class="bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-100"
      placeholder="Nombre de usuario"
    />
  </div>

  <div class="flex flex-col">
    <label for="user_password" class="mb-2 text-gray-300 font-medium"
      >Contraseña</label
    >
    <input
      type="password"
      id="user_password"
      name="user_password"
      required
      class="bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-100"
      placeholder="••••••••"
    />
  </div>

  <div class="flex flex-col">
    <label for="email" class="mb-2 text-gray-300 font-medium">Email</label>
    <input
      type="email"
      id="email"
      name="email"
      required
      class="bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-100"
      placeholder="correo@ejemplo.com"
    />
  </div>

  <button
    type="submit"
    class="w-full bg-gray-600 hover:bg-gray-500 transition-colors text-white font-semibold py-3 rounded-lg shadow-md"
  >
    Registrar
  </button>
</form>

<script src="../scripts/registro.js"></script>
